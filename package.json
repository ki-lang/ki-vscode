{
    "name": "ki-vscode",
    "displayName": "Ki vscode extension",
    "description": "Ki language support",
    "version": "0.0.1",
    "publisher": "ki-lang",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ki-vscode.activate",
                "title": "Ki extension activate"
            }
        ],
        "configurationDefaults": {
            "[ki]": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "ki-lang.ki-vscode",
                "files.eol": "\n"
            }
        },
        "languages": [
            {
                "id": "ki",
                "extensions": [
                    ".ki",
                    ".kh"
                ],
                "configuration": "./language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "ki",
                "scopeName": "source.ki",
                "path": "./syntax/ki.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ki",
            "properties": {
                "zig.buildOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Compiles code on file save using the settings specified in 'Build Option'."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}
