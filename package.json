{
    "name": "ki-vscode",
    "displayName": "Ki vscode extension",
    "description": "Ki language support",
    "version": "0.0.2",
    "publisher": "ki-lang",
    "icon": "images/ki-logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ki-lang/ki-vscode"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ki-vscode.activate",
                "title": "Ki extension activate"
            }
        ],
        "configurationDefaults": {},
        "languages": [
            {
                "id": "ki",
                "extensions": [
                    ".ki",
                    ".kh"
                ],
                "configuration": "./language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "ki",
                "scopeName": "source.ki",
                "path": "./syntax/ki.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ki",
            "properties": {
                "ki.buildOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Compiles code on file save using the settings specified in 'Build Option'."
                },
                "kiLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}
